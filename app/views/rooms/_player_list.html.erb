<div class="row players-row players-grid">
  <% [(1..3), (4..6)].each_with_index do |positions, idx| %>
    <div class="col-md-6">
      <div class="players-side <%= idx.zero? ? 'left-side' : 'right-side' %>">
        <% positions.each do |position| %>
          <% user_id = players_hash[position.to_s][0] %>
          <% player_status = players_hash[position.to_s][1] %>
          <% user = user_id ? User.find_by(id: user_id) : nil %>
          <% is_alive = player_status == "alive" %>
          <% is_killed = player_status == "killed" %>
          
          <div class="player-slot <%= 'killed-player' if is_killed %>" data-position="<%= position %>">
            <div class="player-info">
              <div class="status-circle <%= user ? (is_alive ? 'occupied alive' : (is_killed ? 'killed' : 'occupied')) : 'empty' %>"></div>
              <div class="player-details">
                <span class="player-name <%= 'killed-text' if is_killed %>">
                  <% if user %>
                    <%= user.email %>
                    <% if is_killed %>
                      <span class="killed-indicator">ðŸ’€ ELIMINATED</span>
                    <% elsif is_alive %>
                      <span class="alive-indicator">âœ“ ALIVE</span>
                    <% end %>
                  <% else %>
                    Waiting for player...
                  <% end %>
                </span>
                <small class="position-label">Player <%= position %></small>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  <% end %>
</div>