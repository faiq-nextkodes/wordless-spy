<div class="row players-row players-grid">
  <% [(1..3), (4..6)].each_with_index do |positions, idx| %>
    <div class="col-md-6">
      <div class="players-side <%= idx.zero? ? 'left-side' : 'right-side' %>">
        <% positions.each do |position| %>
          <% user_id = players_hash[position.to_s] %>
          <% user = user_id ? User.find_by(id: user_id) : nil %>
          <div class="player-slot" data-position="<%= position %>">
            <div class="player-info">
              <div class="status-circle <%= user ? 'occupied' : 'empty' %>"></div>
              <div class="player-details">
                <span class="player-name">
                  <%= user&.email || "Waiting for player..." %>
                </span>
                <small class="position-label">Player <%= position %></small>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  <% end %>
</div>