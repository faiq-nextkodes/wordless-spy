<div id="game-data" data-current-user-id="<%= current_user&.id %>"> </div>

<div class="game-room-container">
  <div class="container-fluid">
    <div class="row justify-content-center">
      <div class="col-12 col-lg-10">
        <h2 class="room-title text-center mb-4"><%= @room.name %></h2>
        <div id="room-id" data-room-id="<%= @room.id %>"></div>
        <div id="game-info" class="text-center mt-4"></div>
        <div id="players">
          <%= render partial: "player_list", locals: { 
            players_hash: @game.players_hash,
            is_game_owner: @game.players_hash["1"] == current_user.id,
            game_id: @game.id,
            curr_status: @game.status
            } %>
        </div>
        <div class="text-center mt-4">
          <%= button_to "Leave Game", leave_room_path(@room), 
                        method: :post, 
                        class: "btn btn-danger btn-lg leave-btn",
                        confirm: "Are you sure you want to leave the game?",
                        data: { turbo_prefetch: false } %>
        </div>
        <div id="button-container" class="text-center mt-4"></div>
      </div>
    </div>
  </div>
</div>